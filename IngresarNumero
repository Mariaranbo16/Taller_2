def ingresar_numero_entero ():
while True:
    try:
        numero = float(input("Por favor, ingresa un número positivo mayor que 0: "))
        if numero > 0:
            break
        else:
            print("Error: El número debe ser positivo y mayor que 0. Intenta de nuevo.")
    except ValueError:
        print("Error: Debes ingresar un número válido. Intenta de nuevo.")

print("¡Gracias! Has ingresado un número positivo mayor que 0.")
